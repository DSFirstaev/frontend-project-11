{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-param-reassign": [
            "error", 
            { 
                "props": false 
            }
        ],

        "import/extensions" : [
            "error",
            "ignorePackages",
            {
                "js": "always"
            }
        ],

        "no-underscore-dangle": [
            2, 
            { 
                "allow": ["__filename", "__dirname"] 
            }
        ]
    }
}
